#! /bin/bash

export NODE_ENV="${NODE_ENV:=${1:-development}}"

if [ "$NODE_ENV" == 'production' ]; then
    if [ -d './dist/server' ]; then
        node ./dist/server/index.js;
    else
        printf "unable to find \"./dist/server\""
        exit 1
    fi
else
    yarn run nodemon \
         --watch ./server \
         --watch `realpath ./webpack.config.js` \
         --exec "babel-node" ./server
fi
